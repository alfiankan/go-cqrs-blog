    "basePath": "/",
    "paths": {
        "/articles": {
            "get": {
                "description": "Find articles, provided query param keyword and filter by author, data ordered by created time DESC",
                "consumes": [
                    "application/json"
                ],
                "produces": [
                    "application/json"
                ],
                "tags": [
                    "articles"
                ],
                "summary": "FindArticle find/get articles",
                "parameters": [
                    {
                        "type": "string",
                        "description": "search by keyword on title or body",
                        "name": "keyword",
                        "in": "query"
                    },
                    {
                        "type": "string",
                        "description": "filter by author",
                        "name": "author",
                        "in": "query"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "OK"
                    }
                }
            }
        }
    }
}